<?xml version="1.0" ?>
<openerp>
    <data>

        <menuitem name="Appraisal" parent="hr.menu_hr_root" id="menu_eval_hr" sequence="25"/>
        <menuitem name="Periodic Appraisal" parent="hr.menu_hr_configuration" id="menu_eval_hr_config" sequence="4"/>

        <record model="ir.ui.view" id="view_hr_evaluation_form">
            <field name="name">hr_evaluation.evaluation.form</field>
            <field name="model">hr_evaluation.evaluation</field>
            <field name="arch" type="xml">
                <form string="Appraisal">
                <header>
                    <button name="button_sent_appraisal" string="Start Appraisal" states="new" type="object" class="oe_highlight"  groups="base.group_hr_user"/>
                    <button name="button_done_appraisal" string="Done" states="pending" type="object"  groups="base.group_hr_user"/>
                    <field name="state" widget="statusbar" options="{'fold_field': 'fold'}"/>
                </header>
                <sheet>
                    <label for="employee_id" class="oe_edit_only"/>
                    <h1>
                        <field name="employee_id" class="oe_inline" on_change="1" attrs="{'readonly':[('state','not in',('new'))]}"/>
                    </h1>
                    <group>
                        <group col="4">
                            <field name="department_id" attrs="{'readonly':[('state','not in',('new'))]}"/>
                            <field name="interview_deadline" attrs="{'required':[('state','in', ('pending','done'))]}"/>
                            <field name="date_close" attrs="{'readonly':[('state','in', ('pending','done'))]}"/>
                            <field name="mail_template" attrs="{'readonly':[('state','not in',('new'))]}"/>
                            <field name="user_id" invisible="True"/>
                            <field name="meeting_id" invisible="True"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Final Evaluation" attrs="{'invisible':[('state','=','new')]}">
                            <field name="evaluation"/>
                        </page>
                        <page string="Plan">
                            <group col="4">
                                <label for="appraisal_manager" string="Send Appraisal Form To"/>
                                <group col="3">
                                    <div class="address_format">
                                        <field name="appraisal_manager" attrs="{'readonly':[('state','not in',('new'))]}"/>
                                        <label string="Manager"/>
                                    </div>
                                    <field name="apprasial_manager_ids" nolabel="1" placeholder="Select Appraisal Reviewer..." widget="many2many_tags" attrs="{'invisible':[('appraisal_manager','=',False)], 'required':[('appraisal_manager','=',True)], 'readonly':[('state','not in',('new'))]}"/>
                                    <field name="apprasial_manager_survey_id" nolabel="1" placeholder="Appraisal Form..." on_change="1" attrs="{'invisible':[('appraisal_manager','=',False)], 'required':[('appraisal_manager','=',True)], 'readonly':[('state','not in',('new'))]}"/>
                                    <div class="address_format">
                                        <field name="appraisal_colleagues" attrs="{'readonly':[('state','not in',('new'))]}"/>
                                        <label string="Colleagues"/>
                                    </div>
                                    <field name="appraisal_colleagues_ids" nolabel="1" placeholder="Select Appraisal Reviewer..." widget="many2many_tags" attrs="{'invisible':[('appraisal_colleagues','=',False)], 'required':[('appraisal_colleagues','=',True)], 'readonly':[('state','not in',('new'))]}"/>
                                    <field name="appraisal_colleagues_survey_id" nolabel="1" placeholder="Appraisal Form..." on_change="1" attrs="{'invisible':[('appraisal_colleagues','=',False)], 'required':[('appraisal_colleagues','=',True)], 'readonly':[('state','not in',('new'))]}"/>
                                    <div class="address_format">
                                        <field name="appraisal_self" attrs="{'readonly':[('state','not in',('new'))]}"/>
                                        <label string="Self"/>
                                    </div>
                                    <field name="apprasial_employee" nolabel="1" attrs="{'invisible':[('appraisal_self','=',False)]}"/>
                                    <field name="appraisal_self_survey_id" nolabel="1" on_change="1" placeholder="Appraisal Form..." attrs="{'invisible':[('appraisal_self','=',False)], 'required':[('appraisal_self','=',True)], 'readonly':[('state','not in',('new'))]}"/>
                                    <div class="address_format">
                                        <field name="appraisal_subordinates" attrs="{'readonly':[('state','not in',('new'))]}"/>
                                        <label string="Collaborator"/>
                                    </div>
                                    <field name="appraisal_subordinates_ids" nolabel="1" placeholder="Select Appraisal Reviewer..." widget="many2many_tags" attrs="{'invisible':[('appraisal_subordinates','=',False)], 'required':[('appraisal_subordinates','=',True)], 'readonly':[('state','not in',('new'))]}"/>
                                    <field name="appraisal_subordinates_survey_id" nolabel="1" placeholder="Appraisal Form..." on_change="1" attrs="{'invisible':[('appraisal_subordinates','=',False)], 'required':[('appraisal_subordinates','=',True)], 'readonly':[('state','not in',('new'))]}"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
              </sheet>
	          <div class="oe_chatter">
	              <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
	              <field name="message_ids" widget="mail_thread"/>
	          </div>
              </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_hr_evaluation_tree">
            <field name="name">hr_evaluation.evaluation.tree</field>
            <field name="model">hr_evaluation.evaluation</field>
            <field name="arch" type="xml">
                <tree string="Appraisal">
                    <field name="employee_id" string="Name"/>
                    <field name="date_close"/>
                    <field name="interview_deadline"/>
                    <field name="state"/>
                    <field name="tot_sent_appraisal" readonly="0"/>
                    <field name="tot_comp_appraisal" readonly="0"/>
                </tree>
            </field>
        </record>

       <record id="hr_evaluation.evaluation_search" model="ir.ui.view">
            <field name="name">hr_evaluation.evaluation_search</field>
            <field name="model">hr_evaluation.evaluation</field>
            <field name="arch" type="xml">
                <search string="Search Appraisal">
                    <field name="employee_id"/>
                    <group expand='0' string='Group by...'>
                        <filter string='Employee' icon="terp-personal" domain="[]" context="{'group_by' : 'employee_id'}"/>
                        <filter string='Status' icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by' : 'stage_id'}" />
                   </group>
               </search>
            </field>
        </record>

        <record id="hr_evaluation.evaluation_kanban" model="ir.ui.view">
            <field name="name">hr_evaluation.evaluation_kanban</field>
            <field name="model">hr_evaluation.evaluation</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" quick_create="0">
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <field name="interview_deadline"/>
                    <field name="color"/>
                    <field name="date_close"/>
                    <field name="state"/>
                    <field name="tot_sent_appraisal"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click cal_appraisal" style="height: 200px; width: 300px;">
                            <div class="oe_dropdown_toggle oe_dropdown_kanban" groups="base.group_user">
                                <span class="oe_e">Ã­</span>
                                <ul class="oe_dropdown_menu">
                                    <t t-if="widget.view.is_action_enabled('edit')"><li><a type="edit">Edit...</a></li></t>
                                    <t t-if="widget.view.is_action_enabled('delete')"><li><a type="delete">Delete</a></li></t>
                                    <br/>
                                    <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                </ul>
                            </div>
                            <div class="oe_kanban_content">
                                <div><b><field name="employee_id"/></b></div>
                                <div>
                                    <field name="department_id"/><br/>
                                    <t t-if="record.date_close.raw_value and record.date_close.raw_value lt (new Date())" t-set="red">oe_kanban_text_red</t>
                                    <span t-attf-class="#{red || ''}"><i><field name="date_close"/></i></span>
                                    <br/>
                                </div>
                                <div>
                                    <li>
                                        <t t-if="! record.interview_deadline.raw_value and record.state.raw_value != 'new'">
                                        <strong><a style="color: #7c7bad;" name="schedule_interview_date" type="object">Schedule The Final Interview</a></strong></t>
                                        <t t-if="record.interview_deadline.raw_value and record.state.raw_value != 'new' and record.interview_deadline.raw_value lt (new Date())" t-set="deadline">oe_kanban_text_red</t>
                                        <t t-if="record.interview_deadline.raw_value and record.state.raw_value != 'new'"><strong><span style="color: #7c7bad;">Final Interview: </span></strong>
                                        <span t-attf-class="#{deadline || ''}"><i><field name="interview_deadline"/></i></span></t>
                                    </li>
                                </div>
                                <div style="display: inline-block">
                                    <a name="get_sent_appraisal" type="object"><field name="tot_sent_appraisal" widget="gauge" style="width:120px; height: 90px;" options="{'max_field': 'tot_sent_appraisal'}">Sent Appraisal </field></a>
                                    <a name="get_result_appraisal" type="object"><field name="tot_comp_appraisal" widget="gauge" style="width:120px; height: 90px;" options="{'max_field': 'tot_sent_appraisal'}">Answers </field></a>
                                </div>
                                <div class="oe_kanban_bottom_right_appraisal">
                                    <img t-att-src="kanban_image('hr.employee', 'image_small', record.employee_id.raw_value)" t-att-title="record.employee_id.value" width="24" height="24" class="oe_kanban_avatar pull-right"/>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                          </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.actions.act_window" id="open_view_hr_evaluation_tree">
            <field name="name">Appraisal</field>
            <field name="res_model">hr_evaluation.evaluation</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_next_month":1}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a new appraisal.
              </p><p>
                Each employee may be assigned an Appraisal Plan. Such a plan
                defines the frequency and the way you manage your periodic
                personnel evaluation. You will be able to define steps and
                attach interviews to each step. Odoo manages all kinds of
                evaluations: bottom-up, top-down, self-evaluation and final
                evaluation by the manager.
              </p>
            </field>
        </record>

        <menuitem name="Appraisals" parent="menu_eval_hr" id="menu_open_view_hr_evaluation_tree"
            action="open_view_hr_evaluation_tree" groups="base.group_survey_manager"/>

        <record model="ir.actions.act_window" id="open_view_hr_evaluation_tree2">
            <field name="name">Appraisal</field>
            <field name="res_model">hr_evaluation.evaluation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_employee_id": [active_id]}</field>
        </record>

        <record id="hr_hr_employee_view_form" model="ir.ui.view">
            <field name="name">hr.hr.employee.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(open_view_hr_evaluation_tree2)d"
                    class="oe_stat_button"
                    icon="fa-sitemap"
                    type="action">
                    <field name="appraisal_count" widget="statinfo" string="Appraisals"/>
                </button>
            </xpath>
            <xpath expr="//page[@name='hr_setting']" position="after">
                <page string="Appraisal">
                    <group col="4">
                        <label for="appraisal_manager" string="Send Appraisal Form To"/>
                        <group col="3">
                            <div class="address_format">
                                <field name="appraisal_manager" on_change="1"/>
                                <label string="Manager"/>
                            </div>
                            <field name="apprasial_manager_ids" nolabel="1" placeholder="Select Appraisal Reviewer..." widget="many2many_tags" attrs="{'invisible':[('appraisal_manager','=',False)], 'required':[('appraisal_manager','=',True)]}" readonly="0"/>
                            <field name="apprasial_manager_survey_id" nolabel="1" placeholder="Appraisal Form..." attrs="{'invisible':[('appraisal_manager','=',False)], 'required':[('appraisal_manager','=',True)]}"/>
                            <div class="address_format">
                                <field name="appraisal_colleagues" on_change="1"/>
                                <label string="Colleagues"/>
                            </div>
                            <field name="appraisal_colleagues_ids" nolabel="1" placeholder="Select Appraisal Reviewer..." widget="many2many_tags" attrs="{'invisible':[('appraisal_colleagues','=',False)], 'required':[('appraisal_colleagues','=',True)]}" readonly="0"/>
                            <field name="appraisal_colleagues_survey_id" placeholder="Appraisal Form..." nolabel="1" attrs="{'invisible':[('appraisal_colleagues','=',False)], 'required':[('appraisal_colleagues','=',True)]}"/>
                            <div class="address_format">
                                <field name="appraisal_self" on_change="1"/>
                                <label string="Self"/>
                            </div>
                            <field name="apprasial_employee" nolabel="1" attrs="{'invisible':[('appraisal_self','=',False)]}"/>
                            <field name="appraisal_self_survey_id" nolabel="1" placeholder="Appraisal Form..." attrs="{'invisible':[('appraisal_self','=',False)], 'required':[('appraisal_self','=',True)]}"/>
                            <div class="address_format">
                                <field name="appraisal_subordinates"/>
                                <label string="Collaborator"/>
                            </div>
                            <field name="appraisal_subordinates_ids" nolabel="1" placeholder="Select Appraisal Reviewer..." widget="many2many_tags" attrs="{'invisible':[('appraisal_subordinates','=',False)], 'required':[('appraisal_subordinates','=',True)]}"/>
                            <field name="appraisal_subordinates_survey_id" nolabel="1" placeholder="Appraisal Form..." attrs="{'invisible':[('appraisal_subordinates','=',False)], 'required':[('appraisal_subordinates','=',True)]}"/>
                        </group>
                    </group>
                    <group string="Periodicity" col="4">
                        <field name="appraisal_repeat"/>
                        <field name="appraisal_repeat_number" attrs="{'invisible':[('appraisal_repeat','=',False)], 'required':[('appraisal_repeat','=',True)]}"/>
                        <field name="appraisal_repeat_delay" attrs="{'invisible':[('appraisal_repeat','=',False)], 'required':[('appraisal_repeat','=',True)]}"/>
                        <field name="evaluation_date" attrs="{'invisible':[('appraisal_repeat','=',False)], 'required':[('appraisal_repeat','=',True)]}"/>
                    </group>
                </page>
            </xpath>
            </field>
        </record>
    </data>
</openerp>
