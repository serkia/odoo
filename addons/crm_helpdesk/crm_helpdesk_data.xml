<?xml version="1.0"?>
<openerp>
<data noupdate="1">
    <!--
    Case Sections
    -->
    <!-- notify all employees of module installation -->
        <record model="mail.message" id="module_install_notification">
            <field name="model">mail.group</field>
            <field name="res_id" ref="mail.group_all_employees"/>
            <field name="type">notification</field>
            <field name="subtype_id" ref="mail.mt_comment"/>
            <field name="subject">helpdesk Tracker application installed!</field>
            <field name="body"><![CDATA[<p>Manage the helpdesk you might face in a product, such as bugs in a system, client complaints or material breakdowns.</p><p>
You can record helpdesk, assign them to a responsible person, and keep track of their status as they evolve over time.</p><p>
Access all helpdesk from the top product menu, and access the helpdesk of a specific product via the product gallery view.</p>]]></field>
        </record>

        <!-- helpdesk-related subtypes for messaging / Chatter -->
        <record id="mt_helpdesk_new" model="mail.message.subtype">
            <field name="name">Helpdesk Created</field>
            <field name="res_model">crm.helpdesk</field>
            <field name="default" eval="False"/>
            <field name="hidden" eval="True"/>
            <field name="description">Helpdesk created</field>
        </record>
        <record id="mt_helpdesk_assigned" model="mail.message.subtype">
            <field name="name">Helpdesk Assigned</field>
            <field name="res_model">crm.helpdesk</field>
            <field name="default" eval="False"/>
            <field name="description">Helpdesk assigned</field>
        </record>
        <record id="mt_helpdesk_blocked" model="mail.message.subtype">
            <field name="name">helpdesk Blocked</field>
            <field name="res_model">crm.helpdesk</field>
            <field name="default" eval="False"/>
            <field name="description">Helpdesk blocked</field>
        </record>
        <record id="mt_helpdesk_ready" model="mail.message.subtype">
            <field name="name">Helpdesk Ready for Next Stage</field>
            <field name="res_model">crm.helpdesk</field>
            <field name="default" eval="False"/>
            <field name="description">Helpdesk Ready for Next Stage</field>
        </record>
        <record id="mt_helpdesk_stage" model="mail.message.subtype">
            <field name="name">Stage Changed</field>
            <field name="res_model">crm.helpdesk</field>
            <field name="default" eval="False"/>
            <field name="description">Stage changed</field>
        </record>

         <!--
        Case Stage
        -->
        <record model="crm.helpdesk.stage" id="stage_helpdesk1">
            <field name="name">New</field>
            <field name="sequence">1</field>
            <field name="case_default" eval="True"/>
        </record>

        <record model="crm.helpdesk.stage" id="stage_helpdesk5">
            <field name="name">In Progress</field>
            <field name="sequence">27</field>
            <field name="case_default" eval="True"/>
        </record>

        <record model="crm.helpdesk.stage" id="stage_helpdesk2">
            <field name="name">Pending</field>
            <field name="sequence">28</field>
            <field name="case_default" eval="True"/>
        </record>

        <record model="crm.helpdesk.stage" id="stage_helpdesk4">
            <field name="name">Closed</field>
            <field name="sequence">29</field>
            <field name="case_default" eval="True"/>
            <field name="fold" eval="True"/>
        </record>

        <record model="crm.helpdesk.stage" id="stage_helpdesk3">
            <field name="name">Cancelled</field>
            <field name="sequence">30</field>
            <field name="case_default" eval="True"/>
            <field name="fold" eval="True"/>
        </record>

</data>
</openerp>
