<openerp>
    <data>
        <template id="sales_coupon" inherit_id="sale.report_saleorder_document" name="Sale Coupon Report">
            <xpath expr="//p[@t-field='o.note']" position="before">
                <p><b> Coupon </b></p>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Coupon Code</th>
                            <th>Expiration</th>
                        </tr>
                    </thead>
                    <tbody class="sale__coupon_tbody">
                        <tr t-foreach="o.order_line" t-as="l">
                            <t t-if="l.sale_coupon_id">
                                <td>
                                   <span t-field="l.sale_coupon_id.product_id"/>
                                </td>
                                <td>
                                   <span t-field="l.sale_coupon_id.code"/>
                                </td>
                                <td>
                                    <t t-if="l.sale_coupon_id.validity == 'expiration_date'">
                                        <span t-field="l.sale_coupon_id.expiration_date"/>
                                    </t>
                                    <t t-if="l.sale_coupon_id.validity == 'expiration_use'">
                                        <span t-field="l.sale_coupon_id.expiration_use"/> uses
                                    </t>
                                </td>
                            </t>
                        </tr>
                    </tbody>
                </table>
            </xpath>
        </template>
    </data>
</openerp>
