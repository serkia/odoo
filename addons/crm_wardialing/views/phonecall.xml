<?xml version="1.0" encoding="utf-8"?>
<!-- vim:fdn=3:
-->

<openerp>
    <data>

        <!--Call Center Phonecalls Tree View -->
        <record model="ir.ui.view" id="crm_call_center_phonecall_tree_view">
            <field name="name">CRM - Call Center Calls Tree</field>
            <field name="model">crm.phonecall</field>
            <field name="arch" type="xml">
                <tree string="Phone Calls" editable="top">
                    <field name="sequence" widget="handle"/>
                    <field name="date"/>
                    <field name="name"/>
                    <field name="partner_id"
                        on_change="on_change_partner_id(partner_id)"/>
                    <field name="partner_phone"
                        invisible="1"/>
                    <field name="user_id" context="{'default_groups_ref': ['base.group_user', 'base.group_partner_manager', 'base.group_sale_salesman_all_leads']}"/>
                    <field name="categ_id" widget="selection"
                        domain="[('object_id.model', '=', 'crm.phonecall')]"
                        invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="create_date" invisible="1"/>
                    <field name="opportunity_id" invisible="1" on_change="on_change_opportunity(opportunity_id)"/>
                    <button string="Schedule Other Call"
                        icon="terp-call-start"
                        name="%(crm.phonecall_to_phonecall_act)d"
                        type="action"/>
                    <button string="Meeting"
                         icon="gtk-redo"
                         name="action_make_meeting" type="object"/>
                    <button string="Convert to Opportunity"
                        name="action_button_convert2opportunity"
                        states="open,pending"
                        icon="gtk-index"
                        type="object" attrs="{'invisible':[('opportunity_id','!=',False)]}"/>
                </tree>
            </field>
        </record>

        <!-- Add the fields to_call and sequence in the form view of the phonecalls-->
        <record model="ir.ui.view" id="phonecall_tocall_form_view">
            <field name="name">crm.phonecall.tocall</field>
            <field name="model">crm.phonecall</field>
            <field name="inherit_id" ref="crm.crm_case_phone_form_view"/>
            <field name="arch" type="xml">
                <group>
                    <field name="to_call"/>
                    <field name="sequence"/>
                </group>
            </field>
        </record>

        
        <!-- Add the filter "Scheduled Calls" to the search bar-->
        <record model="ir.ui.view" id="crm_phonecall_filter_tocall">
            <field name="name">crm.phonecall.filter.tocall</field>
            <field name="model">crm.phonecall</field>
            <field name="inherit_id" ref="crm.view_crm_case_phonecalls_filter"/>
            <field name="arch" type="xml">
                <search string="Search Phonecalls">
                    <filter name="call_center_call_filter" string="Call Center Calls" domain="[('to_call','=',True)]"/>
                </search>
            </field>
        </record>

        <!-- Add the fields to_call and sequence in the tree view of the phonecalls. 
            The sequence field is a widget that allows to order the phonecalls-->
        <record model="ir.ui.view" id="crm_phonecall_tree_tocall">
            <field name="name">crm.phonecall.tree.tocall</field>
            <field name="model">crm.phonecall</field>
            <field name="inherit_id" ref="crm_call_center_phonecall_tree_view"/>
            <field name="arch" type="xml">
                <tree string="Phone Calls" editable="top">
                    <field name="to_call"/>
                    <field name="sequence"/>
                </tree>
            </field>
        </record>
        
        <!-- Add the menu to reach the view of the call center calls-->
        <record model="ir.actions.act_window" id="crm_phone_callcenter">
            <field name="name">Call Center</field>
            <field name="res_model">crm.phonecall</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,calendar,form</field>
            <field name="view_id" ref="crm_call_center_phonecall_tree_view"/>
            <field name="domain">[]</field>
            <field name="context" eval="{'search_default_call_center_call_filter':1}"/>
            <field name="search_view_id" ref="crm.view_crm_case_phonecalls_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to log the summary of a phone call. 
              </p><p>
                Odoo allows you to log inbound calls on the fly to track the
                history of the communication with a customer or to inform another
                team member.
              </p><p>
                In order to follow up on the call, you can trigger a request for
                another call, a meeting or an opportunity.
              </p>
            </field>
        </record>


        <!-- Add the button in the kaban view of the opportunities-->
        <record model="ir.ui.view" id="lead_button_call_kanban_view">
            <field name="name">crm.lead.tocall</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
            <field name="arch" type="xml">
                <div class="oe_kanban_content">
                     <a href="#" title="Add to call center calls">
                        
                        <img  class="oe_dial_lead_to_call_center_button_icon" src="/web/static/src/img/icons/terp-call-start.png" />
                    </a>
                </div>
            </field>
        </record>

        <menuitem name="Call Center" id="menu_crm_phone_callcenter"
            parent="crm.menu_crm_case_phone"
            action="crm_phone_callcenter" />
    </data>
</openerp>
