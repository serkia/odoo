<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="GanttView">
        <div class="oe_gantt">
            <button class="oe_button oe_gantt_button_create">Create</button>
            <strong>Zoom Timeline: </strong>
            <input type="radio" name="scale" value="day" />Day
            <input type="radio" name="scale" value="week" />Week
            <input type="radio" name="scale" value="month" />Month
            <input type="radio" name="scale" value="year" />Year
            <div t-att-id="widget.chart_id" class="oe_gantt_view"/>
        </div>
    </t>
</templates>
