<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-name="website.score.set">
        <div class="input-group">
            <input type="number" name="page_score" class="form-control" maxlength="30"/>
            <span class="input-group-btn">
              <button data-action="add_score" class="btn btn-default" type="button">Add</button>
              <button data-action="get_score" class="btn btn-default" type="button">Get</button>
            </span>
        </div>
        <div class="modal fade oe_seo_configuration js_seo_configuration" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button title="Close" type="button" class="close" data-dismiss="modal">Ã—</button>
                        <div class="h2">Set a score for this page</div>
                    </div>
                    <div class="modal-body">
                        <h1>Does it work ?</h1>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-action="update" class="btn btn-primary">Save</button>
                        or
                        <a data-action="discard" data-dismiss="modal" href="#" >Discard</a>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
