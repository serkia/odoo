<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    
    <!-- Need to move in promote if you considere that it's finish (al) -->
    <t t-name="website.set.score">
        <div class="modal fade " tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content"> 
                    <div class="modal-header">
                        <button title="Close" type="button" class="close" data-dismiss="modal">×</button>
                        <div class="h2">Set This Page Score</div>
                        <div class="text-muted">
                            Track your leads efficiently.
                        </div>
                    </div>
                    <div class="modal-body">
                        <section>
                            <h3 class="page-header">Set this page score</h3>
                            <input type="hidden" id="link" class="form-control"/>
                        </section>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-action="save_score" class="btn btn-primary">Save</button>
                        or
                        <a data-action="discard" data-dismiss="modal" href="#" >Discard</a>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="website.create.score">
        <div class="modal fade " tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button title="Close" type="button" class="close" data-dismiss="modal">×</button>
                        <div class="h2">Create a new score</div>
                        <div class="text-muted">
                            Track your leads efficiently.
                        </div>
                    </div>
                    <div class="modal-body">
                        <section>
                            <h3 class="page-header">Set this page score to:</h3>
                            <!-- 
                                Maybe something like that ? Your are the designer :) 
                            -->
                            <div class="form-inline row">
                                <div class="input-group col-md-offset-1 col-md-6">
                                    <b style="margin-left:20px"> Name: </b><span id="score_name" />
                                </div>
                                <div class="input-group pull-right col-md-4">
                                  <span class="input-group-addon">
                                      <a href="#" class="mb8 js_minus">
                                          <i class="fa fa-minus"></i>
                                      </a>
                                  </span>
                                  <input value="1" type="text" class="js_quantity form-control " id="score_value" />
                                  <span class="input-group-addon">
                                      <a href="#" class="mb8 float_left js_more">
                                          <i class="fa fa-plus"></i>
                                      </a>
                                  </span>
                                </div>
                            </div>

                        </section>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-action="create_score" class="btn btn-primary">Save</button>
                        or
                        <a data-action="discard" data-dismiss="modal" href="#" >Discard</a>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>

