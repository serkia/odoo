<?xml version="1.0" encoding="UTF-8"?>

<openerp>

    <data>

        <!-- Scheduler for Lead Assign-->
        <record forcecreate="True" id="ir_cron_lead_assign" model="ir.cron">
            <field name="name">Lead Assign Cron</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
            <field eval="'crm.case.section'" name="model" />
            <field eval="'assign_leads'" name="function" />
        </record>

        <!-- Scheduler for Lead Scoring -->
        <record forcecreate="True" id="ir_cron_lead_scoring" model="ir.cron">
            <field name="name">Lead Scoring Cron</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
            <field eval="'website.crm.score'" name="model" />
            <field eval="'assign_scores_to_leads'" name="function" />
        </record>

        <!-- Score Menu Item -->
        <menuitem id="leads_menu" name="Leads Management" parent="base.marketing_menu" />

        <!-- 
        SCORE
         -->
        <!-- Action to display the leads that have a particular score -->
        <record model="ir.actions.act_window" id="score_leads">
            <field name="name">Leads</field>
            <field name="res_model">crm.lead</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('score_ids', 'in', active_id)]</field>
        </record>
        <!-- Score Form View -->
        <record model="ir.ui.view" id="view_crm_score_form">
            <field name="name">Website Crm Score Form</field>
            <field name="model">website.crm.score</field>
            <field name="arch" type="xml">
                <form string="Scores">
                    <sheet>
                        <div class="oe_right oe_button_box" name="buttons">
                            <button class="oe_inline oe_stat_button" type="action" 
                                name="%(score_leads)d" icon="fa-tags"
                                >
                                <field string="Leads" name="leads_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="value"/>
                            <field name="domain"/>
                            <field name="running"/>
                        </group>
                        <button name="assign_scores_to_leads" type="object" string=" Score Now" class="oe_link"/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Score Tree View -->
        <record model="ir.ui.view" id="view_crm_score_tree">
            <field name="name">Website Crm Score Tree</field>
            <field name="model">website.crm.score</field>
            <field name="arch" type="xml">
                <tree string="Scores">
                    <field name="name"/>
                    <field name="value"/>
                    <field name="domain"/>
                    <field name="running"/>
                </tree>
            </field>
        </record>

        <!-- Score Action - tree - form -->
        <record model="ir.actions.act_window" id="score_action">
            <field name="name">Scores</field>
            <field name="res_model">website.crm.score</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Score Menu Item -->
        <menuitem id="scores_menu" name="Scoring Rules" parent="leads_menu" action="score_action" />

        <!-- 
        SECTION USER
         -->
        <!-- Section User From View -->
        <record model="ir.ui.view" id="view_crm_section_user_form">
            <field name="name">Section User Form</field>
            <field name="model">section.user</field>
            <field name="arch" type="xml">
                <form string="Section User">
                    <sheet>
                        <h1>
                            <field name="user_id"/>
                        </h1>
                        <group>
                            <field name="section_id"/>
                            <label for="maximum_user_leads" String="Maximum Leads / 30 days"/>
                            <div>
                                <field name="maximum_user_leads" class="oe_inline"/>
                            </div>
                            <!-- <field name="maximum_user_leads"/>  -->
                            <field name="section_user_domain" widget="char_domain" options="{'model': 'crm.lead'}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Section User Tree View -->
        <record model="ir.ui.view" id="view_crm_section_user_tree">
            <field name="name">Section User Tree</field>
            <field name="model">section.user</field>
            <field name="arch" type="xml">
                <tree string="Section User">
                    <field name="section_id"/>
                    <field name="user_id"/>
                    <field name="maximum_user_leads"/>
                    <field name="leads_count"/>
                </tree>
            </field>
        </record>

        <!-- Mega Moche !!! -->
        <record model="ir.ui.view" id="section_user_kanban">
            <field name="name">section.user.kanban</field>
            <field name="model">section.user</field>
            <field name="arch" type="xml">
                <kanban quick_create="false" create="true">
                    <field name="user_id"/>
                    <field name="running"/>
                    <templates>
                        <t t-name="kanban-box">
                            <table>
                                <tr>
                                    <td>
                                        <ul>
                                            <li>
                                                <a type="open">
                                                    <img t-att-src="kanban_image('res.partner', 'image_small', record.user_id.id)" class="oe_kanban_image"/>
                                                </a>
                                            </li>
                                            <li>
                                                <div style='text-align: center; padding: 4px;'>
                                                    <t t-if="record.running.raw_value === true">
                                                        <button name="toggle_active" type="object" style="
                                                            color: #eeeeee;
                                                            background-image: -webkit-gradient(linear, left top, left bottom, from(#3faf3f), to(#1a721a));">
                                                            <span class="fa fa-check"/>
                                                        </button>
                                                    </t> 
                                                    <t t-if="record.running.raw_value === false">
                                                        <button name="toggle_active" type="object" style="
                                                            color: #eeeeee;
                                                            background-image: -webkit-gradient(linear, left top, left bottom, from(#df3f3f), to(#a21a1a));">
                                                            <span class="fa fa-times"/>
                                                        </button>
                                                    </t>
                                                </div>
                                            </li>
                                        </ul>
                                    </td>
                                    <td> 
                                        <div class="oe_kanban_details">
                                            <table>
                                                <tr>
                                                    <td style='width: 240px'>
                                                        <ul>
                                                            <li><a type="open">
                                                                <b><field name="user_name"/></b>
                                                            </a></li>
                                                            <li><a type="open">
                                                                <field name="section_id"/>
                                                            </a></li>
                                                            <li><field name="section_user_domain" widget="smart_filters"/></li>
                                                        </ul>
                                                    </td> 
                                                    <td>
                                                        <field name="maximum_user_leads" invisible="1"/>
                                                        <field name="leads_count" widget="gauge" 
                                                            style="width:108px; height: 81px; cursor: pointer;"
                                                            options="{'max_field': 'maximum_user_leads'}"/> 
                                                    </td> 
                                                </tr>
                                            </table>
                                        </div>
                                    </td> 
                                </tr>
                            </table>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Section User Action - form - tree -->
        <record model="ir.actions.act_window" id="section_user_action">
            <field name="name">SectionUser</field>
            <field name="res_model">section.user</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <!-- Section User Menu Item -->
        <menuitem id="section_user" name="Leads Assignation" parent="leads_menu" action="section_user_action" />

        <!-- SECTION -->
        <!-- Section Action - form - tree -->
        <record model="ir.actions.act_window" id="section_action">
            <field name="name">Sections</field>
            <field name="res_model">crm.case.section</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Section User Menu Item -->
        <menuitem id="section" name="Teams Assignation" parent="leads_menu" action="section_action" /> 




    </data>
</openerp>