<?xml version="1.0" encoding="UTF-8"?>

<openerp>

    <data>

        <!-- 
        LEADS
         -->
        <!-- Crm Lead Search Filter - Language added -->
        <record model="ir.ui.view" id="view_crm_case_leads_filter_inherit">
            <field name="name">crm.lead.search.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.view_crm_case_leads_filter" />
            <field name="arch" type="xml">
                <field name="country_id" position="after">
                    <field name="lang_id"/>
                    <field name="score_ids"/>
                </field>
            </field>
        </record>

        <!-- Crm Lead Tree View - Score and Salesman added -->
        <record model="ir.ui.view" id="lead_tree_view">
            <field name="name">crm.lead.tree.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_leads" />
            <field name="arch" type="xml">
                <field name="phone" position="after">
                    <field name="score" />
                </field>
                <field name="section_id" position="after">
                    <field name="user_id" />
                </field>
            </field>
        </record>

        <!-- Crm Lead Form View - PageViews, Score and Language added -->
        <record model="ir.ui.view" id="lead_score_form">
            <field name="name">crm.lead.form.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads" />
            <field name="arch" type="xml">
                <xpath expr="//button[@class='oe_inline oe_stat_button']" position="after">
                    <button class="oe_inline oe_stat_button" type="action" 
                        name="%(website_crm_score_pageviews)d" icon="fa-tags"
                        context="{'search_default_lead_id': active_id, 'default_lead_id': active_id}">
                        <field string="Page views" name="pageviews_count" widget="statinfo"/>
                    </button>
                </xpath>
                <field name="priority" position="after">
                    <field name="score" />
                </field>
                <xpath expr="//group[@string='Misc']" position="after">
                    <group string="Scoring">
                        <field name="score_ids"
                            widget="many2many_tags"
                            domain="[('object_id.model','=','crm.lead')]"
                            context="{'object_name': 'crm.lead'}"
                            readonly="1"
                        />
                        <field name="lang_id" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- SALESTEAM -->
        <!-- SalesTeam Kanban View - Lead information added -->
        <record id="crm_case_section_salesteams_view_kanban_inherit" model="ir.ui.view">
            <field name="name">crm.case.section.kanban.inherit</field>
            <field name="model">crm.case.section</field>
            <field name="inherit_id" ref="sales_team.crm_case_section_salesteams_view_kanban"/>
            <field name="arch" type="xml">
                <data>
                    <field name="member_ids" position="after">
                        <field name="section_user_ids"/>
                    </field>
                    <xpath expr="//div[@class='oe_clear']" position="after">
                        <div class="oe_items_list">
                            <div>
                                Capacity: <b><field name="capacity"/></b>
                            </div>
                            <div>
                                Lead count: <b><field name="leads_count"/></b>
                            </div>
                            <div></div>
                            <div>
                                Assigned: <b><field name="assigned_leads"/></b>
                            </div>
                        </div>
                    </xpath>
                    <xpath expr="//div[@class='oe_kanban_salesteams_avatars']" position="replace">
                        <t t-foreach="record.section_user_ids.raw_value.slice(0,10)" t-as="member">
                            <img t-att-src="kanban_image('res.partner', 'image_small', member.user_id)" t-att-data-member_id="member.user_id"/>
                        </t>
                    </xpath>
                </data>
            </field>
        </record>

        <!-- LEADS VIA SALESTEAM -->
        <record model="ir.ui.view" id="crm_case_graph_view_leads_sales">
            <field name="name">Unassigned leads</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <graph string="Opportunities" type="line">
                    <field name="create_date" type="row"/>
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="crm_score_views_action_graph">
            <field name="name">Unassigned leads</field>
            <field name="res_model">crm.lead</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph,tree,form</field>
            <field name="view_id" ref="crm_case_graph_view_leads_sales"/>
        </record>


        <record model="ir.ui.view" id="crm_case_table_view_leads_sales">
            <field name="name">Opportunities</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <graph string="Opportunities" type="pivot">
                    <field name="stage_id" type="col"/>
                    <field name="user_id" type="row"/>
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="crm_score_views_action_table">
            <field name="name">Opportunities</field>
            <field name="res_model">crm.lead</field>
            <field name="view_type">form</field>
            <field name="view_mode">graph,tree,form</field>
            <field name="view_id" ref="crm_case_table_view_leads_sales"/>
        </record>

        <!-- SalesTeam Form View - Lead information and page Assignation added -->
        <record model="ir.ui.view" id="sales_team_form_view_assign">
            <field name="name">crm.case.section.form.inherit</field>
            <field name="model">crm.case.section</field>
            <field name="inherit_id" ref="sales_team.crm_case_section_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']" position="before">
                    <div class="oe_right oe_button_box" name="buttons">
                        <button class="oe_inline oe_stat_button" type="action" 
                            name="%(crm_score_views_action_graph)d" icon="fa-tags"
                            context="{'search_default_section_id': active_id, 'search_default_unassigned': 1 }" 
                            >
                            <field string="Unassigned leads" name="unassigned_leads" widget="statinfo"/>
                        </button>
                        <button class="oe_inline oe_stat_button" type="action" 
                            name="%(crm_score_views_action_table)d" icon="fa-tags"
                            context="{'search_default_section_id': active_id}" 
                            >
                            <field string="Opportunities" name="leads_count" widget="statinfo"/>
                        </button>
                    </div>
                </xpath>
                <xpath expr="//group[@name='left']" position="after">
                    <group name="right">
                        <field name="score_section_domain" widget="char_domain" options="{'model': 'crm.lead'}"/>
                        <label for="assigned_leads"/>
                        <div>
                            <field name="assigned_leads" class="oe_inline"/> / <!-- le slash est en hauteur, c'est moche -->
                            <field name="capacity" class="oe_inline"/>
                            <br/>
                            <button name="assign_leads" type="object" string=" Assign Now" class="oe_link"/>
                        </div>
                        
                    </group>
                </xpath>
                <xpath expr="//page[@string='Team Members']" position="replace">
                    <page string="Assignation">
                        <field name="section_user_ids" widget="many2many_kanban">
                            <t t-debug='pdb'/> 
                            <kanban quick_create="false" create="true">
                                <field name="user_id"/>
                                <field name="running"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <table>
                                            <tr>
                                                <td>
                                                    <ul>
                                                        <li>
                                                            <a type="open">
                                                                <img t-att-src="kanban_image('res.partner', 'image_small', record.user_id.id)" class="oe_kanban_image"/>
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <div style='text-align: center; padding: 4px;'>
                                                                <t t-if="record.running.raw_value === true">
                                                                    <button name="toggle_active" type="object" style="
                                                                        color: #eeeeee;
                                                                        background-image: -webkit-gradient(linear, left top, left bottom, from(#3faf3f), to(#1a721a));">
                                                                        <span class="fa fa-check"/>
                                                                    </button>
                                                                </t> 
                                                                <t t-if="record.running.raw_value === false">
                                                                    <button name="toggle_active" type="object" style="
                                                                        color: #eeeeee;
                                                                        background-image: -webkit-gradient(linear, left top, left bottom, from(#df3f3f), to(#a21a1a));">
                                                                        <span class="fa fa-times"/>
                                                                    </button>
                                                                </t>
                                                            </div>
                                                        </li>
                                                    </ul>
                                                </td>
                                                <td> 
                                                    <div class="oe_kanban_details">
                                                        <table>
                                                            <tr>
                                                                <td style='width: 240px'>
                                                                    <ul>
                                                                        <li><a type="open">
                                                                            <b><field name="user_name"/></b>
                                                                        </a></li>
                                                                        <!-- widget is uesless because char_domain doesn't exist for kanban view-->
                                                                        <li><field name="section_user_domain" widget="smart_filters"/></li>
                                                                    </ul>
                                                                </td> 
                                                                <td>
                                                                    <field name="maximum_user_leads" invisible="1"/>
                                                                    <field name="leads_count" widget="gauge" 
                                                                        style="width:108px; height: 81px; cursor: pointer;"
                                                                        options="{'max_field': 'maximum_user_leads'}"/> 
                                                                </td> 
                                                            </tr>
                                                        </table>
                                                    </div>
                                                </td> 
                                            </tr>
                                        </table>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </page>
               </xpath>
            </field>
        </record>

    </data>
</openerp>