        <record model="ir.ui.view" id="sales_team_form_view_assign">
            <field name="name">crm.case.section.form.inherit</field>
            <field name="model">crm.case.section</field>
            <field name="inherit_id" ref="sales_team.crm_case_section_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook[@colspan='4']" position="before">
                    <field name="filter_ids"/>
                    <group>
                        <field name="maximum_section_leads"/>
                    </group>
                </xpath>
<!--                 <field name="active" position="after">
                    <table>
