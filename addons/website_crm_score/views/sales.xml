                </field> -->
                <xpath expr="//page[@string='Team Members']" position="replace">
                    <page string="Assignation">
                        <field name="section_user_ids" widget="many2many_kanban">
                            <t t-debug='pdb'/> 
                            <kanban quick_create="false" create="true">
                                <field name="user_id"/>
                                <templates>
                                    <!-- <t t-debug='pdb'/> -->
                                    <t t-name="kanban-box">
                                        <a type="open">     
                                            <img t-att-src="kanban_image('res.partner', 'image_small', record.id.value)" class="oe_kanban_image"/>
                                        </a>

                                        <!-- section_domain displays a domain, how do I display this ?-->
                                        <div class="oe_kanban_details">
                                            <ul>
                                                <li><a type="open">
                                                    <field name="user_name"/>
                                                </a></li>
                                                <li><field name="section_domain" widget="char_domain"/></li> <!-- widget is uesless -->
                                                <li><field name="maximum_user_leads"/></li>
                                                <!-- sparkline....... -->
                                                <li><field name="percentage_leads"/> <!-- widget="sparkline_bar" options="{'height': '20px', 'barWidth': 4, 'barSpacing': 1}"/> --><!-- widget is uesless -->
                                                </li>
                                            </ul>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </page>
               </xpath>
            </field>
        </record>


