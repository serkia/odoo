<?xml version="1.0" encoding="UTF-8"?>

<openerp>

    <data>

        <!-- Scheduler for Lead Assign-->
        <record forcecreate="True" id="ir_cron_lead_assign" model="ir.cron">
            <field name="name">Lead Assign Cron</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
            <field eval="'crm.case.section'" name="model" />
            <field eval="'assign_leads'" name="function" />
        </record>

        <record model="ir.ui.view" id="sales_team_form_view_assign">
            <field name="name">crm.case.section.form.inherit</field>
            <field name="model">crm.case.section</field>
            <field name="inherit_id" ref="sales_team.crm_case_section_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook[@colspan='4']" position="before">
                    <group>
                        <!-- <field name="section_domain"/> -->
                        <field name="section_domain" widget="char_domain" options="{'model': 'crm.lead'}"/>
                        <field name="capacity"/>
                        <field name="leads_count"/>
                        <field name="assigned_leads"/>
                        <button name="assign_leads" type="object" string="Assign"/>
                    </group>
                </xpath>
                <xpath expr="//page[@string='Team Members']" position="replace">
                    <page string="Assignation">
                        <field name="section_user_ids" widget="many2many_kanban">
                            <t t-debug='pdb'/> 
                            <kanban quick_create="false" create="true">
                                <field name="user_id"/>
                                <field name="running"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <a type="open">     
                                            <img t-att-src="kanban_image('res.partner', 'image_small', record.user_id.id)" class="oe_kanban_image"/>
                                        </a>
                                        <div class="oe_kanban_details">
                                            <table>
                                                <tr>
                                                    <td>
                                                        <ul>
                                                            <li><a type="open">
                                                                <field name="user_name"/>
                                                            </a></li>
                                                            <!-- widget is uesless because char_domain doesn't exist for kanban view-->
                                                            <li><field name="section_user_domain" widget="char_domain"/></li>
                                                            <li>
                                                                <button name="toggle_active" type="object">
                                                                    <t t-if="record.running.raw_value === true">Active</t>
                                                                    <t t-if="record.running.raw_value === false">Inactive</t>
                                                                </button>
                                                            </li>
                                                        </ul>
                                                    </td> 
                                                    <td>
                                                        <field name="maximum_user_leads" invisible="1"/>
                                                        <!-- todo: edit css -->
                                                       <!--  <field name="percentage_leads" widget="gauge" 
                                                            style="width:120px; height: 100px; cursor: pointer;"/>  -->
                                                        <field name="leads_count" widget="gauge" 
                                                            style="width:108px; height: 81px; cursor: pointer;"
                                                            options="{'max_field': 'maximum_user_leads'}"/> 
                                                    </td> 
                                                </tr>
                                            </table>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </page>
               </xpath>
            </field>
        </record>
    </data>
</openerp>