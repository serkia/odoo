<template id="website_crm_scoring_assign" inherit_id="website.template" groups="base.group_user">
    <xpath expr="//div[@class='modal-body']/section[@class='js_seo_keywords_list']" position="after">
        <section class="set_score">
            <h3 class="page-header mt16">1. Set Score Keywords <small>describing your page content</small></h3>
            <div class="modal fade " tabindex="-1" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content"> 
                        <div class="modal-header">
                            <button title="Close" type="button" class="close" data-dismiss="modal">Ã—</button>
                            <div class="h2">Set This Page Score</div>
                            <div class="text-muted">
                                Track your leads efficiently.
                            </div>
                        </div>
                        <div class="modal-body">
                            <section>
                                <h3 class="page-header">Set this page score</h3>
                                <input type="hidden" id="link" class="form-control"/>
                            </section>
                        </div>
                        <div class="modal-footer">
                            <button type="button" data-action="save_score" class="btn btn-primary">Save</button>
                            or
                            <a data-action="discard" data-dismiss="modal" href="#" >Discard</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </xpath>
</template>


