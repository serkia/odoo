        <record model="ir.ui.view" id="view_crm_case_leads_filter_inherit">
            <field name="name">crm.lead.search.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.view_crm_case_leads_filter" />
            <field name="arch" type="xml">
                <field name="country_id" position="after">
                    <field name="lang_id"/>
                </field>
            </field>
        </record>


        <record model="ir.ui.view" id="lead_tree_view">
            <field name="name">crm.lead.tree.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_leads" />
            <field name="arch" type="xml">
                <field name="phone" position="after">
                    <field name="score" />
                </field>
                <field name="section_id" position="after">
                    <field name="user_id" />
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="lead_score_form">
            <field name="name">crm.lead.form.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads" />
            <field name="arch" type="xml">
                <!-- TODO: Context does not work -->
               <!--  <xpath expr="//button[@class='oe_inline oe_stat_button']" position="after">
                    <button class="oe_inline oe_stat_button" type="action" 
                            name="%(website_crm_score_pageviews)d" icon="fa-tags"
                            context="{'lead_id': active_id}">
                            <div>Page Views</div>
                    </button>
                </xpath> -->
                <field name="priority" position="after">
                    <field name="score" />
                </field>
                <xpath expr="//group[@string='Misc']" position="after">
                    <group string="Scoring">
                        <!-- <field name="score"/> -->
                        <field name="score_ids"
                            widget="many2many_tags"
                            domain="[('object_id.model','=','crm.lead')]"
                            context="{'object_name': 'crm.lead'}"
                            readonly="1"
                        />
                        <field name="lang_id" readonly="1"/>
                        <!-- todo: title should be above the tree so that there is more space for the urls to be showed -->
                        <field name="score_pageview_ids" readonly="1">
                            <tree string="Page Views">
                                <field name="url"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>



        <!-- <menuitem id="main_scoring_menu" name="Lead scoring" /> -->

        <menuitem id="leads_menu" name="website_crm_score" parent="base.menu_base_partner" />

        <record model="ir.ui.view" id="view_score_form">
            <field name="name">ir.ui.view.inherit.score</field>
            <field name="model">ir.ui.view</field>
            <field name="inherit_id" ref="base.view_view_form" />
            <field name="arch" type="xml">
                <field name="priority" position="after">
                    <!-- <field name="page"  attrs="{'invisible':True}"/> -->
                    <!-- <field name="score_id"  attrs="{'invisible':[('page','=',False)]}"/> -->
                    <field name="track"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_track_tree">
            <field name="name">ir.ui.view.inherit.track</field>
            <field name="model">ir.ui.view</field>
            <field name="inherit_id" ref="base.view_view_tree" />
            <field name="arch" type="xml">
                <field name="priority" position="after">
                    <!-- <field name="page"  attrs="{'invisible':True}"/> -->
                    <!-- <field name="score_id"  attrs="{'invisible':[('page','=',False)]}"/> -->
                    <field name="track"/>
                </field>
            </field>
        </record>

        <record model="ir.actions.act_window" id="lead_setting_action">
            <field name="name">Views</field>
            <field name="res_model">ir.ui.view</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="views_menu" name="Views" parent="leads_menu" action="lead_setting_action" />

        <record model="ir.ui.view" id="view_crm_score_form">
            <field name="name">Website Crm Score Form</field>
            <field name="model">website.crm.score</field>
            <field name="arch" type="xml">
                <form string="Scores">
                    <group>
                        <field name="name"/>
                        <field name="value"/>
                        <field name="domain"/>
                        <field name="running"/>
                        <button name="assign_scores_to_leads" type="object" string="Assign"/>
                    </group>

                </form>            
            </field>
        </record>

        <record model="ir.ui.view" id="view_crm_score_tree">
            <field name="name">Website Crm Score Tree</field>
            <field name="model">website.crm.score</field>
            <field name="arch" type="xml">
                <tree string="Scores">
                    <field name="name"/>
                    <field name="value"/>
                    <field name="domain"/>
                    <field name="running"/>
                </tree>            
            </field>
        </record>

        <record model="ir.actions.act_window" id="score_setting_action">
            <field name="name">Scores</field>
            <field name="res_model">website.crm.score</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="scores_menu" name="Scores" parent="leads_menu" action="score_setting_action" />


        <record model="ir.ui.view" id="view_crm_section_user_form">
            <field name="name">Section User Form</field>
            <field name="model">section.user</field>
            <field name="arch" type="xml">
                <form string="Section User">
                    <group>
                        <field name="section_id"/>
                        <field name="user_id"/>
                        <field name="maximum_user_leads"/>
                        <field name="section_user_domain" widget="char_domain" options="{'model': 'crm.lead'}"/>
                    </group>
                </form>            
            </field>
        </record>

        <record model="ir.ui.view" id="view_crm_section_user_tree">
            <field name="name">Section User Tree</field>
            <field name="model">section.user</field>
            <field name="arch" type="xml">
                <tree string="Section User">
                    <field name="section_id"/>
                    <field name="user_id"/>
                    <field name="maximum_user_leads"/>
                    <field name="leads_count"/>
                </tree>            
            </field>
        </record>

        <record model="ir.actions.act_window" id="section_user_action">
            <field name="name">SectionUser</field>
            <field name="res_model">section.user</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="section_user" name="SectionUser" parent="leads_menu" action="section_user_action" />


