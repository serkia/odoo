        <!-- Score Menu Item -->
        <menuitem id="leads_menu" name="Leads Management" parent="base.marketing_menu" />

        <!-- 
        PAGEVIEW
        -->
        <!-- PageView Search Filter on lead_id -->
        <record id="crm_score_pageview_filter" model="ir.ui.view">
            <field name="name">Website crm score pageviews</field>
            <field name="model">website.crm.pageview</field>
            <field name="arch" type="xml">
                <search string="Search PageViews">
                    <field name="lead_id"/>
                </search>
            </field>
        </record>

        <!-- PageView Form View -->
        <record model="ir.ui.view" id="crm_score_pageview_form">
            <field name="name">website.crm.pageview.form</field>
            <field name="model">website.crm.pageview</field>
            <field name="arch" type="xml">
                <form string="Page Views">
                    <sheet>
                        <h1>
                            <field name="url"/>
                        </h1>
                        <group>
                            <field name="lead_id"/>
                            <field name="partner_id"/>
                            <field name="create_date"/>    
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- PageView Graph View -->
        <record model="ir.ui.view" id="crm_score_pageview_graph">
            <field name="name">website.crm.pageview.graph</field>
            <field name="model">website.crm.pageview</field>
            <field name="arch" type="xml">
                <graph string="Page Views" type="bar">
                    <field name="url"/>
                    <!-- <field name="create_date"/> -->
                </graph>
            </field>
        </record>

        <!-- PageView Tree View -->
        <record model="ir.ui.view" id="website_crm_pageview_tree">
            <field name="name">Page Views Tree</field>
            <field name="model">website.crm.pageview</field>
            <field name="arch" type="xml">
                <tree string="Page Views">
                    <field name="lead_id"/>
                    <field name="partner_id"/>
                    <field name="url"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <!-- PageView Action - tree - form - graph -->
        <record model="ir.actions.act_window" id="website_crm_score_pageviews">
            <field name="name">Page Views</field>
            <field name="res_model">website.crm.pageview</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="search_view_id" ref="crm_score_pageview_filter"/>
        </record>

        <!-- PageView Menu Item -->
        <menuitem id="pageview_menu" name="Website Pages" parent="base.marketing_reporting_menu" action="website_crm_score_pageviews" />

        <!-- 
        LEADS
         -->
        <!-- Crm Lead Search Filter - Language added -->
        <record model="ir.ui.view" id="view_crm_case_leads_filter_inherit">
            <field name="name">crm.lead.search.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.view_crm_case_leads_filter" />
            <field name="arch" type="xml">
                <field name="country_id" position="after">
                    <field name="lang_id"/>
                    <field name="score_ids"/>
                </field>
            </field>
        </record>

        <!-- Crm Lead Tree View - Score and Salesman added -->
        <record model="ir.ui.view" id="lead_tree_view">
            <field name="name">crm.lead.tree.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_leads" />
            <field name="arch" type="xml">
                <field name="phone" position="after">
                    <field name="score" />
                </field>
                <field name="section_id" position="after">
                    <field name="user_id" />
                </field>
            </field>
        </record>

        <!-- Crm Lead Form View - PageViews, Score and Language added -->
        <record model="ir.ui.view" id="lead_score_form">
            <field name="name">crm.lead.form.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads" />
            <field name="arch" type="xml">
                <xpath expr="//button[@class='oe_inline oe_stat_button']" position="after">
                    <button class="oe_inline oe_stat_button" type="action" 
                        name="%(website_crm_score_pageviews)d" icon="fa-tags"
                        context="{'search_default_lead_id': active_id, 'default_lead_id': active_id}">
                        <field string="Page views" name="pageviews_count" widget="statinfo"/>
                    </button>
                </xpath>
                <field name="priority" position="after">
                    <field name="score" />
                </field>
                <xpath expr="//group[@string='Misc']" position="after">
                    <group string="Scoring">
                        <!-- <field name="score"/> -->
                        <field name="score_ids"
                            widget="many2many_tags"
                            domain="[('object_id.model','=','crm.lead')]"
                            context="{'object_name': 'crm.lead'}"
                            readonly="1"
                        />
                        <field name="lang_id" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- 
        VIEWS
         -->
        <!-- View Form View - Track added -->
        <record model="ir.ui.view" id="view_score_form">
            <field name="name">ir.ui.view.inherit.score</field>
            <field name="model">ir.ui.view</field>
            <field name="inherit_id" ref="base.view_view_form" />
            <field name="arch" type="xml">
                <field name="priority" position="after">
                    <field name="track"/>
                </field>
            </field>
        </record>

        <!-- View Tree View - Track added -->
        <record model="ir.ui.view" id="view_track_tree">
            <field name="name">ir.ui.view.inherit.track</field>
            <field name="model">ir.ui.view</field>
            <field name="inherit_id" ref="base.view_view_tree" />
            <field name="arch" type="xml">
                <field name="priority" position="after">
                    <field name="track"/>
                </field>
            </field>
        </record>

        <!-- View Action - tree - form -->
        <record model="ir.actions.act_window" id="crm_score_views_action">
            <field name="name">Views</field>
            <field name="res_model">ir.ui.view</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Views Menu Item -->
        <menuitem id="views_menu" name="Views" parent="leads_menu" action="crm_score_views_action" />

        <!-- 
        SCORE
         -->
        <!-- Score Form View -->
        <record model="ir.ui.view" id="view_crm_score_form">
            <field name="name">Website Crm Score Form</field>
            <field name="model">website.crm.score</field>
            <field name="arch" type="xml">
                <form string="Scores">
                    <sheet>
                        <div class="oe_right oe_button_box" name="buttons">
                            <button class="oe_inline oe_stat_button" type="action" 
                                name="%(crm.crm_case_category_act_leads_all)d" icon="fa-tags"
                                context="{'score_ids': active_id}" 
                                > <!-- lead.score_ids contains active_id -->
                                <field string="Leads" name="leads_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="value"/>
                            <field name="domain"/>
                            <field name="running"/>
                        </group>
                        <!-- <button name="assign_scores_to_leads" type="object" string="Assign (dev)"/> -->
                        <button name="assign_scores_to_leads" type="object" string=" Assign Now" class="oe_link"/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Score Tree View -->
        <record model="ir.ui.view" id="view_crm_score_tree">
            <field name="name">Website Crm Score Tree</field>
            <field name="model">website.crm.score</field>
            <field name="arch" type="xml">
                <tree string="Scores">
                    <field name="name"/>
                    <field name="value"/>
                    <field name="domain"/>
                    <field name="running"/>
                </tree>
            </field>
        </record>

        <!-- Score Action - tree - form -->
        <record model="ir.actions.act_window" id="score_action">
            <field name="name">Scores</field>
            <field name="res_model">website.crm.score</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Score Menu Item -->
        <menuitem id="scores_menu" name="Scoring Rules" parent="leads_menu" action="score_action" />

        <!-- 
        SECTION USER
         -->
        <!-- Section User From View -->
        <record model="ir.ui.view" id="view_crm_section_user_form">
            <field name="name">Section User Form</field>
            <field name="model">section.user</field>
            <field name="arch" type="xml">
                <form string="Section User">
                    <sheet>
                        <h1>
                            <field name="user_id"/>
                        </h1>
                        <group>
                            <field name="section_id"/>
                            <!-- <field name="user_id"/> -->
                            <field name="maximum_user_leads"/>
                            <field name="section_user_domain" widget="char_domain" options="{'model': 'crm.lead'}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Section User Tree View -->
        <record model="ir.ui.view" id="view_crm_section_user_tree">
            <field name="name">Section User Tree</field>
            <field name="model">section.user</field>
            <field name="arch" type="xml">
                <tree string="Section User">
                    <field name="section_id"/>
                    <field name="user_id"/>
                    <field name="maximum_user_leads"/>
                    <field name="leads_count"/>
                </tree>
            </field>
        </record>

        <!-- Mega Moche !!! -->
        <record model="ir.ui.view" id="section_user_kanban">
            <field name="name">event.event.kanban</field>
            <field name="model">section.user</field>
            <field name="arch" type="xml">
                <kanban quick_create="false" create="true">
                    <field name="user_id"/>
                    <field name="running"/>
                    <templates>
                        <t t-name="kanban-box">
                            <table>
                                <tr>
                                    <td>
                                        <ul>
                                            <li>
                                                <a type="open">
                                                    <img t-att-src="kanban_image('res.partner', 'image_small', record.user_id.id)" class="oe_kanban_image"/>
                                                </a>
                                            </li>
                                            <li>
                                                <div style='text-align: center; padding: 4px;'>
                                                    <t t-if="record.running.raw_value === true">
                                                        <button name="toggle_active" type="object" style="
                                                            color: white;
                                                            background-image: -webkit-gradient(linear, left top, left bottom, from(#3faf3f), to(#1a721a));">
                                                            <span class="fa fa-check"/>
                                                        </button>
                                                    </t> 
                                                    <t t-if="record.running.raw_value === false">
                                                        <button name="toggle_active" type="object" style="
                                                            color: white;
                                                            background-image: -webkit-gradient(linear, left top, left bottom, from(#df3f3f), to(#a21a1a));">
                                                            <span class="fa fa-times"/>
                                                        </button>
                                                    </t>
                                                </div>
                                            </li>
                                        </ul>
                                    </td>
                                    <td> 
                                        <div class="oe_kanban_details">
                                            <table>
                                                <tr>
                                                    <td style='width: 240px'>
                                                        <ul>
                                                            <li><a type="open">
                                                                <b><field name="user_name"/></b>
                                                            </a></li>
                                                            <li><a type="open">
                                                                <field name="section_id"/>
                                                            </a></li>
                                                            <!-- widget is uesless because char_domain doesn't exist for kanban view-->
                                                            <li><field name="section_user_domain" widget="filters"/></li>
                                                        </ul>
                                                    </td> 
                                                    <td>
                                                        <field name="maximum_user_leads" invisible="1"/>
                                                        <!-- todo: edit css -->
                                                       <!--  <field name="percentage_leads" widget="gauge" 
                                                            style="width:120px; height: 100px; cursor: pointer;"/>  -->
                                                        <field name="leads_count" widget="gauge" 
                                                            style="width:108px; height: 81px; cursor: pointer;"
                                                            options="{'max_field': 'maximum_user_leads'}"/> 
                                                    </td> 
                                                </tr>
                                            </table>
                                        </div>
                                    </td> 
                                </tr>
                            </table>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Section User Action - form - tree -->
        <record model="ir.actions.act_window" id="section_user_action">
            <field name="name">SectionUser</field>
            <field name="res_model">section.user</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <!-- Section User Menu Item -->
        <menuitem id="section_user" name="Leads Assignation" parent="leads_menu" action="section_user_action" />

        <!-- SECTION -->
        <!-- Section Action - form - tree -->
        <record model="ir.actions.act_window" id="section_action">
            <field name="name">Sections</field>
            <field name="res_model">crm.case.section</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Section User Menu Item -->
        <menuitem id="section" name="Teams Assignation" parent="leads_menu" action="section_action" />        

        <!-- 
        IR FILTER
         -->
        <!-- Ir Filters Search Filter - action_id added -->
        <record model="ir.ui.view" id="ir_filters_view_search_inherit">
            <field name="name">ir.filters.inherit</field>
            <field name="model">ir.filters</field>
            <field name="inherit_id" ref="base.ir_filters_view_search" />
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="action_id"/>
                </field>
            </field>
        </record>

        <!-- Ir Filters Tree View -->
        <record model="ir.ui.view" id="view_ir_filters_tree">
            <field name="name">Spam ir Filters Tree</field>
            <field name="model">ir.filters</field>
            <field name="arch" type="xml">
                <tree string="Spam Ir Filters">
                    <field name="name"/>
                    <field name="domain"/>
                    <field name="model_id"/>
                    <field name="action_id"/>
                </tree>
            </field>
        </record>

        <!-- Ir Filters Action - form - tree -->
        <record model="ir.actions.act_window" id="spam_ir_filters_action">
            <field name="name">SpamIrFilter</field>
            <field name="res_model">ir.filters</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_ir_filters_tree"/>
            <field name="search_view_id" ref="ir_filters_view_search_inherit"/>
        </record>
        <record model="ir.actions.act_window" id="spam_ir_filters_action">
            <field name="context" eval="{'search_default_action_id': ref('spam_ir_filters_action')}"/>
        </record>

        <!-- Ir Filters Menu Item -->
        <!-- <menuitem id="spam_ir_filters" name="SpamIrFilters" parent="leads_menu" action="spam_ir_filters_action" /> -->

        <record id="action_mark_as_spam" model="ir.actions.server">
            <field name="name">Mark As Spam</field>
            <field name="model_id" ref="model_crm_lead"/>
            <field name="state">code</field>
            <field name="code">
ir_action_id = self.pool['ir.actions.act_window'].search(cr, uid, [('name', '=', 'SpamIrFilter')], context=context)[0]
values = {'model_id': 'crm.lead', 'action_id': ir_action_id, 'user_id': uid}
for lead_id in context['active_ids']:
    mail = self.read(cr, uid, lead_id, fields=['email_from'], context=context)['email_from']
    vals = values.copy()
    # str() below changes the encoding of mail from unicode 
    vals['domain'] = [('email_from', '=', str(mail))]
    vals['name'] = 'spam-' + mail
    self.pool['ir.filters'].create_or_replace(cr, uid, vals, context=context)
            </field>
        </record>

