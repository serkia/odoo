<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Add entry action in the 'More' Menu -->
        <record id="action_print_account_invoice_multi" model="ir.actions.act_window">
            <field name="name">Send Invoices by post</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">print.order.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="print_order_wizard_form_view"/>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record id="print_account_invoice_multi" model="ir.values">
            <field name="model_id" ref="account.model_account_invoice" />
            <field name="name">Send invoices by post</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_print_account_invoice_multi'))" />
            <field name="key">action</field>
            <field name="model">account.invoice</field>
        </record>


        <!-- Add button on invoice form view -->
        <record id="action_print_invoice_wizard" model="ir.actions.act_window">
            <field name="name">Send by Post</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">print.order.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="print_order_wizard_form_view"/>
            <field name="target">new</field>
        </record>

        <record id="invoice_print_docsaway_form" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <button name="invoice_print" position="before">
                    <button name="%(print.action_print_invoice_wizard)d" string="Send Letter" type="action" attrs="{'invisible':['|',('sent','=',True), ('state', '!=', 'open')]}" class="oe_highlight" groups="base.group_user"/>
                    <button name="%(print.action_print_invoice_wizard)d" string="Send Letter" type="action" attrs="{'invisible':['|',('sent','=',False), ('state', '!=', 'open')]}" groups="base.group_user"/>
                </button>
            </field>
        </record>

    </data>
</openerp>