<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- print.order.wizard views -->
        <record id="print_order_wizard_form_view" model="ir.ui.view">
            <field name="name">print.order.wizard.form</field>
            <field name="model">print.order.wizard</field>
            <field name="arch" type="xml">
                <form string="Postal Wizard Order">
                    <sheet>
                        <div class="alert alert-danger" attrs="{'invisible':[('provider_balance','&gt;', 0)]}"><b> Credit error :</b> Your Provider Credit account is negative. Please refill your provider account to send documents.
                        </div>
                        <group>
                            <group>
                                <field name="provider_id"/>
                                <field name="currency_id"/>
                                <field name="provider_balance" readonly="1"/>
                            </group>
                            <group>
                                <field name="paper"/>
                                <field name="ink"/>
                            </group>
                            <field name="is_sendable" invisible="1"/>
                            <field name="nbr_lines" invisible="1"/>
                            <field name="provider_environment" invisible="1"/>
                        </group>
                        <div class="alert alert-danger" attrs="{'invisible':[('is_sendable','==', True)]}">
                            <span class="oe_form_field oe_inline"><b>Bad Postal Address :</b> At least one of the document you want to send has not a correct postal address.</span>
                        </div>
                        <group attrs="{'invisible':[('nbr_lines','&lt;=', 1)]}">
                            <field name="print_order_line_wizard_ids" nolabel="1" create="0"/>
                        </group>
                    </sheet>
                    <footer>
                        <group>
                            <span>
                                <span attrs="{'invisible':[('is_sendable','==', False), '|', ('provider_balance','&lt;=', 0), ('provider_environment', '!=', 'test')]}">
                                    <button string="Send" type="object" class="oe_highlight" name="action_apply"/>
                                    or
                                </span>
                                <button string="Cancel" class="oe_link" special="cancel" />
                            </span>
                        </group>
                    </footer>
                </form>
            </field>
        </record>


        <!-- print.order.line.wizard views -->
        <record id="print_order_line_wizard_form_view" model="ir.ui.view">
            <field name="name">print.order.line.wizard.form</field>
            <field name="model">print.order.line.wizard</field>
            <field name="arch" type="xml">
                <form string="Postal Order Line Wizard">
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="res_id"/>
                                <field name="model_name"/>
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="print_order_line_wizard_list_view" model="ir.ui.view">
            <field name="name">print.order.line.wizard.list</field>
            <field name="model">print.order.line.wizard</field>
            <field name="arch" type="xml">
                <tree string="Print Order Lines" create="0" colors="red:(is_sendable == False)">
                    <field name="is_sendable" invisible="1"/>
                    <field name="partner_id"/>
                    <field name="last_send_date"/>
                </tree>
            </field>
        </record>

    </data>
</openerp>