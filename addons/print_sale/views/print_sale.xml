<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Add entry action in the 'More' Menu -->
        <record id="action_print_sale_order_multi" model="ir.actions.act_window">
            <field name="name">Send by post</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">print.order.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="print.print_order_wizard_form_view"/>
            <field name="target">new</field>
            <field name="multi">True</field>
        </record>

        <record id="print_sale_order_multi" model="ir.values">
            <field name="model_id" ref="sale.model_sale_order" />
            <field name="name">Send by post</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_print_sale_order_multi'))" />
            <field name="key">action</field>
            <field name="model">sale.order</field>
        </record>


        <!-- Add button on invoice form view -->
        <record id="action_print_sale_order_wizard" model="ir.actions.act_window">
            <field name="name">Send by Post</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">print.order.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="print.print_order_wizard_form_view"/>
            <field name="target">new</field>
        </record>

        <record id="sale_order_print_docsaway_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <button name="print_quotation" position="before">
                    <button name="%(action_print_sale_order_wizard)d" string="Send Letter" type="action" states="draft" class="oe_highlight" groups="base.group_user"/>
                    <button name="%(action_print_sale_order_wizard)d" string="Send Letter" type="action" states="sent,progress,manual" groups="base.group_user"/>
                </button>
            </field>
        </record>

    </data>
</openerp>