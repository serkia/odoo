<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">
    <t t-name="PlannerManager">
       <li class="oe_topbar_item oe_planner_systray">
            <div class="oe_planner_progress">
                <span class="fa fa-question-circle pull-left" style="color:white;"/>
                <div class="progress">
                    <div class="progress-bar" t-attf-style="width :0%;">
                    </div>
                </div>
            </div>
        </li>
    </t>

    <t t-name="PlannerFooter">
        <div class="planner_footer col-sm-8 col-md-9 col-xs-12 hidden-print">
            <span class="shadow" />
            <div class="col-xs-6 text-right mark-block">
                <t t-if="!start and !end">
                    <button t-attf-id='input_element_btn_#{current_page_id}' 
                        t-attf-data-progress='#{current_page_id}'
                        class='fa fa-square-o btn btn-primary mark_as_done'><i /> <span>Mark As Done</span>
                    </button>
                </t>
            </div>
            <div class="col-xs-6 next-block">
                <t t-if="!end">
                    <a data-toggle='collapse'
                        t-attf-class="pull-left btn btn-#{start and 'primary' or 'default'} btn-next"
                        t-attf-data-parent='#{current_page_id}' 
                        t-attf-href='##{next_page_id}'>Next step<i class="fa fa-angle-right"></i>
                    </a>
                    <span class="help-block span-next"> <t t-esc="next_page_name"/></span>
                </t>
            </div>
        </div>
    </t>

    <t t-name="PlannerDialog">
        <div>
            <div class="modal fade" id="PlannerModal" tabindex="-1" role="dialog" aria-labelledby="PlannerModalLabel" aria-hidden="true">
                <div class="modal-dialog planner-dialog">
                    <div class="modal-content"> 

                        <div class="modal-body"> 
                            <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"></i></button>
                            
                            <div class="content"> 
                                
                                <div class="col-sm-12 col-xs-4 progress_container">
                                    <div class="col-sm-4 col-md-3 col-xs-12 progress_col">
                                        <div class="progress col-xs-10">
                                            <div class="progress-bar" t-attf-style="width :50%;"></div>
                                        </div>
                                        <span class="counter col-xs-2"></span>
                                    </div>
                                </div> 
                                        
                            </div> <!-- / content -->

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="PlannerReport">
       <html>
           <head>
                <!--we need to link this files because we are generating new html page for reports -->
                <link rel="stylesheet" href="/web/static/lib/bootstrap/css/bootstrap.css"/>
                <link rel="stylesheet" href="/planner/static/src/css/planner.css"/>
                <link rel="stylesheet" href="/web/static/lib/fontawesome/css/font-awesome.css"/>
                <script type="text/javascript" src="/web/static/lib/bootstrap/js/bootstrap.js"></script>
            </head>
            <body>
                <div class="oe_planner">
                    <t t-raw="content"/>
                </div>
           </body>
       </html>
    </t>

</templates>
