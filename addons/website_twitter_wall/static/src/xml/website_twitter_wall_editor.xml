<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="create_twitter_wall">
        <div class="modal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                        <h3 class="modal-title">Twitter Wall</h3>
                    </div>
                    <div class="load-category text-center error_msg" style="display:none"><h4><i class='fa fa-spinner fa-spin'></i> Fetching Category...</h4></div>
                    <div class="modal-body">
                        <form class="clearfix form-horizontal">
                            <div class="form-group">
                                <div class="control-group">
                                    <label for="wall_name" class="pr0 control-label col-sm-3">
                                        Name:
                                    </label>
                                    <div class="col-sm-9">
                                        <input type="text" id="wall_name" name="wall_name" class="form-control" placeholder="Title" required="required" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-group">
                                    <label for="include_retweet" class="pr0 control-label col-sm-3">
                                        Re-Tweet?
                                    </label>
                                    <div class="col-sm-9">
                                        <input type="checkbox" id="include_retweet" name="include_retweet" class="form-control" />
                                        <span class="text-muted">Tick mark if you Don't want to stream ReTweet.</span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-group">
                                    <label for="wall_description" name="slide-description" class="pr0 control-label col-sm-3">
                                        Description:
                                    </label>
                                    <div class="controls col-sm-9">
                                        <textarea id="wall_description" rows="4" placeholder="Description" class="form-control"  maxlength="150"></textarea>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" data-action="save" class="btn btn-primary">Create Draft </button>
                        <button type="button" id="save" class="btn btn-primary">Create and Publish</button>
                        or
                        <a data-action="discard" data-dismiss="modal" href="#" >Discard</a>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>