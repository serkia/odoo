<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Attachment -->
        <menuitem name="Marketing" id="base.marketing_menu" sequence="85" groups="base.group_user"/>
        <menuitem id="main_slides" parent="base.marketing_menu" name="Presentations"/>
        <record model="ir.ui.view" id="view_slides_attachment_kanban">
            <field name="name">ir.attachment kanban</field>
            <field name="model">ir.attachment</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="file_type_icon"/>
                    <field name="url"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_vignette">
                                    <div class="oe_attachment">
                                        <div t-if="record.file_type_icon.value != 'webimage'">
                                            <img t-att-src="'/mail/static/src/img/mimetypes/' + record.file_type_icon.value + '.png'"></img>
                                        </div>
                                        <div t-if="record.file_type_icon.value == 'webimage' and !record.url.value">
                                            <img t-att-src="kanban_image('ir.attachment', 'datas', record.id.value)"/>
                                        </div>
                                        <div t-if="record.file_type_icon.value and record.url.value">
                                            <img t-att-src="record.url.value"/>
                                        </div>
                                        <div class="oe_name">
                                            <field name="name"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_slides_attachment_form" model="ir.ui.view">
            <field name="model">ir.attachment</field>
            <field name="arch" type="xml">
                <form string="Attachments">
                    <sheet>
                        <field name="image_thumb" widget="image" class="oe_left oe_avatar"/>
                        <div class="oe_title oe_left">
                            <div class="oe_edit_only">
                                <label for="name" string="Name"/>
                            </div>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name"/>
                            </h1>
                            <field name="tag_ids" widget="many2many_tags" placeholder="Tags..."/>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                            <field name="website_published" class="pull-right" widget="website_button"/>
                        </div>
                        <group>
                            <group string="Data">
                                <field name="datas" filename="datas_fname" attrs="{'invisible':[('slide_type','=','video')]}"/>
                                <field name="datas_fname" invisible="1" class="oe_inline oe_right" />
                                <field name="url" widget="url" />
                            </group>
                            <group string="Others">
                                <field name="is_slide"/>
                                <field name="slide_type"/>
                            </group>
                            <group string="Categorization">
                                <field name="channel_id" string="Channel"/>
                                <field name="category_id" domain="[('channel_id','=',channel_id)]"/>
                            </group>
                        </group>
                        <group name="description_group" string="Description" colspan="4">
                            <field name="description" nolabel="1"/>
                        </group>
                        <group name="index_content_group" string="Index Content" colspan="4" invisible="1">
                            <field name="index_content" nolabel="1"/>
                        </group>
                        </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_slides_attachment_tree" model="ir.ui.view">
            <field name="model">ir.attachment</field>
            <field name="arch" type="xml">
                <tree string="Attachments">
                    <field name="name" string="Name"/>
                    <field name="datas_fname"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <record id="action_slides_attachment" model="ir.actions.act_window">
            <field name="name">Presentations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ir.attachment</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" eval="False"/>
            <field name="domain">[('is_slide','=',True)]</field>
            <field name="context">{'default_is_slide':True, 'default_slide_type':'presentation'}</field>
            <field name="search_view_id" ref="base.view_attachment_search"/>
        </record>
        <record id="action_slides_attachment_tree_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_slides_attachment_tree"/>
            <field name="act_window_id" ref="action_slides_attachment"/>
        </record>
        <record id="action_slides_attachment_tree_view2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_slides_attachment_form"/>
            <field name="act_window_id" ref="action_slides_attachment"/>
        </record>
        <menuitem action="action_slides_attachment" id="submenu_slides_attachment" parent="main_slides" sequence="10"/>

        <!-- Change the directory view -->
        <record model="ir.ui.view" id="view_document_directory_form">
            <field name="name">slide.channel</field>
            <field name="model">slide.channel</field>
            <field name="arch" type="xml">
                <form string="Directories" col="4">
                    <sheet>
                        <div class="oe_title oe_left">
                            <div class="oe_edit_only">
                                <label for="name" string="Name"/>
                            </div>
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name"/>
                            </h1>
                            <label for="sequence"/>
                            <field name="sequence" placeholder="Priority"/>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons">
                            <field name="website_published" class="pull-right" widget="website_button"/>
                        </div>

                        <group string="Promote Presentation">
                            <group>
                                <field name="template_id" domain="[('model','=','ir.attachment')]"/>
                                <field name="promote" widget="radio"/>
                            </group>
                            <group>
                                <field name="slide_id" attrs="{'invisible':[('promote','!=','custom')]}" domain="[('channel_id','=',id), ('website_published','=',True)]"/>
                            </group>
                        </group>

                        <group string="Visiblity">
                            <group>
                                <field name="visiblity" widget="radio"/>
                            </group>
                            <group>

                            </group>
                            <field name="group_ids" attrs="{'invisible':[('visiblity','in',('public','private'))]}" colspan="4" nolabel="1"/>
                        </group>

                        <label for="description"/>
                        <field name="description" colspan="4" nolabel="1"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="action_presentation_channels" model="ir.actions.act_window">
            <field name="name">Channels</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">slide.channel</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>

            <field name="domain">[('is_channel','=',True)]</field>
            <field name="context">{'default_is_channel':True}</field>
        </record>
        <menuitem action="action_presentation_channels" id="menu_action_presentation_channel" parent="main_slides" sequence="20"/>

        <!-- category view -->
        <record model="ir.ui.view" id="view_slides_attachment_category_form">
            <field name="name">ir.attachment.category.form</field>
            <field name="model">ir.attachment.category</field>
            <field name="arch" type="xml">
                <form string="Category">
                    <sheet>
                            <group>
                                <group>
                                    <field name="name"/>
                                </group>
                                <group>
                                    <field name="channel_id"/>
                                </group>
                            </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_slides_attachment_category_tree" model="ir.ui.view">
            <field name="name">ir.attachment.category.form</field>
            <field name="model">ir.attachment.category</field>
            <field name="arch" type="xml">
                <tree string="Category">
                    <field name="name"/>
                    <field name="channel_id"/>
                </tree>
            </field>
        </record>


        <record id="action_ir_attachment_category" model="ir.actions.act_window">
            <field name="name">Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ir.attachment.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
        </record>
        <menuitem action="action_ir_attachment_category" id="menu_action_ir_attachment_category" parent="main_slides" sequence="15"/>

    </data>
</openerp>
