<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_productlabel">
    <t t-call="report.html_container">
        <div class="page">
            <t t-foreach="docs" t-as="product">
                <div class="col-xs-6" align="center" style="height:170px">
                    <table class="table table-bordered" style="width:90%;">
                        <tr>
                            <td width="35%" style="background-color:#D11616 !important;">
                                <span t-field="product.default_code"/>
                            </td>
                            <td style="background-color:#CFCFCF !important;">
                                <span t-field="product.list_price"/>
                                <span t-field="product.company_id.currency_id.name"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-center">
                                <t t-if="product.ean13">
                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', product.ean13, 600, 100)" style="width:100%"/>
                                </t>
                            </td>
                            <td>
                                <t t-set="count" t-value="len(product.attribute_value_ids)"/>
                                <t t-foreach="product.attribute_value_ids" t-as="variant">
                                    <span>
                                        <t t-esc="variant.name"/><t t-if="count &gt; 1">,</t>
                                    </span>
                                    <t t-set="count" t-value="count-1"/>
                                </t>
                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </div>
    </t>
</template>
</data>
</openerp>